<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h3 mb-0">Pagamentos</h1>
  <%= link_to "Novo Pagamento", new_payment_path, class: "btn btn-primary" %>
</div>

<% if @payments.any? %>
  <!-- Mobile View: Cards -->
  <div class="d-md-none">
    <% @payments.each do |payment| %>
      <div class="card mb-3">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-start mb-2">
            <div>
              <h5 class="card-title mb-1"><%= format_currency(payment.value) %></h5>
              <small class="text-muted"><%= payment.date.strftime("%d/%m/%Y") %></small>
            </div>
            <div>
              <% if payment.reimbursement_code.present? %>
                <span class="badge bg-success"><%= payment.reimbursement_code %></span>
              <% else %>
                <span class="badge bg-secondary">N√£o reembolsado</span>
              <% end %>
            </div>
          </div>
          <p class="card-text mb-2">
            <strong><%= payment.primary_classification.name %></strong> / 
            <%= payment.secondary_classification.name %>
          </p>
          <% if payment.description.present? %>
            <p class="card-text text-muted small mb-2"><%= truncate(payment.description, length: 100) %></p>
          <% end %>
          <div class="row g-2 mb-2">
            <div class="col-6">
              <small class="text-muted d-block">CPF/CNPJ:</small>
              <small><%= payment.cpf_cnpj || "-" %></small>
            </div>
            <div class="col-6">
              <small class="text-muted d-block">Pagamento:</small>
              <small><%= payment.payment_method || "-" %></small>
            </div>
          </div>
          <div class="btn-group w-100" role="group">
            <%= link_to "Ver", payment_path(payment), class: "btn btn-sm btn-outline-primary" %>
            <%= link_to "Editar", edit_payment_path(payment), class: "btn btn-sm btn-outline-secondary" %>
            <% if payment.document_photo.attached? %>
              <%= link_to "üìÑ", rails_blob_path(payment.document_photo, disposition: "inline"), target: "_blank", class: "btn btn-sm btn-outline-info", title: "Ver documento" %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Desktop View: Table -->
  <div class="d-none d-md-block">
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Data</th>
            <th>Classifica√ß√£o</th>
            <th>Descri√ß√£o</th>
            <th>CPF/CNPJ</th>
            <th>Valor</th>
            <th>Pagamento</th>
            <th>Reembolso</th>
            <th>Documento</th>
            <th>A√ß√µes</th>
          </tr>
        </thead>
        <tbody>
          <% @payments.each do |payment| %>
            <tr>
              <td><%= payment.date.strftime("%d/%m/%Y") %></td>
              <td>
                <small><%= payment.primary_classification.name %></small><br>
                <small class="text-muted"><%= payment.secondary_classification.name %></small>
              </td>
              <td><%= truncate(payment.description, length: 50) %></td>
              <td><%= payment.cpf_cnpj %></td>
              <td><strong><%= format_currency(payment.value) %></strong></td>
              <td><%= payment.payment_method %></td>
              <td>
                <% if payment.reimbursement_code.present? %>
                  <span class="badge bg-success"><%= payment.reimbursement_code %></span>
                <% else %>
                  <span class="badge bg-secondary">N√£o reembolsado</span>
                <% end %>
              </td>
              <td>
                <% if payment.document_photo.attached? %>
                  <%= link_to "Ver", rails_blob_path(payment.document_photo, disposition: "inline"), target: "_blank", class: "btn btn-sm btn-outline-primary" %>
                <% else %>
                  <span class="text-muted">-</span>
                <% end %>
              </td>
              <td>
                <div class="btn-group" role="group">
                  <%= link_to "Ver", payment_path(payment), class: "btn btn-sm btn-outline-primary" %>
                  <%= link_to "Editar", edit_payment_path(payment), class: "btn btn-sm btn-outline-secondary" %>
                  <%= link_to "Excluir", payment_path(payment), data: { turbo_method: :delete, turbo_confirm: "Tem certeza?" }, class: "btn btn-sm btn-outline-danger" %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% else %>
  <div class="alert alert-info">
    Nenhum pagamento registrado ainda. <%= link_to "Criar primeiro pagamento", new_payment_path, class: "alert-link" %>.
  </div>
<% end %>

