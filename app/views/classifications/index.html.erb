<h1 class="h3 mb-3">Classificações</h1>

<div class="card mb-4">
  <div class="card-header">
    <h3 class="h5 mb-0">Adicionar Classificação Primária</h3>
  </div>
  <div class="card-body">
    <%= form_with url: create_primary_classifications_path, method: :post, local: true, id: "primary_form" do |form| %>
      <div class="input-group">
        <%= form.text_field :name, class: "form-control", placeholder: "Nome da classificação primária", required: true %>
        <%= form.submit "Adicionar", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

<% if @primary_classifications.any? %>
  <% @primary_classifications.each do |primary| %>
    <div class="card mb-3">
      <div class="card-header">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-2">
          <h4 class="h5 mb-0"><%= primary.name %></h4>
          <div class="d-flex gap-2 w-100 w-md-auto">
            <button type="button" class="btn btn-sm btn-outline-primary flex-fill flex-md-none" onclick="toggleSecondaryForm(<%= primary.id %>)">
              + Adicionar Secundária
            </button>
            <button type="button" class="btn btn-sm btn-outline-primary d-none d-md-block" onclick="toggleSecondaryForm(<%= primary.id %>)">
              + Adicionar Secundária
            </button>
            <%= link_to "Excluir", destroy_primary_classifications_path(id: primary.id), 
                data: { turbo_method: :delete, turbo_confirm: "Tem certeza? Isso também excluirá todas as classificações secundárias." }, 
                class: "btn btn-sm btn-outline-danger flex-fill flex-md-none" %>
            <%= link_to "Excluir", destroy_primary_classifications_path(id: primary.id), 
                data: { turbo_method: :delete, turbo_confirm: "Tem certeza? Isso também excluirá todas as classificações secundárias." }, 
                class: "btn btn-sm btn-outline-danger d-none d-md-block" %>
          </div>
        </div>
      </div>
      <div class="card-body">
        <div id="secondary_form_<%= primary.id %>" style="display: none; margin-bottom: 1rem;">
          <%= form_with url: create_secondary_classifications_path, method: :post, local: true do |form| %>
            <%= form.hidden_field :primary_classification_id, value: primary.id %>
            <div class="input-group">
              <%= form.text_field :name, class: "form-control", placeholder: "Nome da classificação secundária", required: true %>
              <%= form.submit "Adicionar", class: "btn btn-success" %>
              <button type="button" class="btn btn-secondary" onclick="toggleSecondaryForm(<%= primary.id %>)">Cancelar</button>
            </div>
          <% end %>
        </div>

        <% if primary.secondary_classifications.any? %>
          <div class="list-group">
            <% primary.secondary_classifications.each do |secondary| %>
              <div class="list-group-item d-flex justify-content-between align-items-center">
                <span><%= secondary.name %></span>
                <%= link_to "Excluir", destroy_secondary_classifications_path(id: secondary.id), 
                    data: { turbo_method: :delete, turbo_confirm: "Tem certeza?" }, 
                    class: "btn btn-sm btn-outline-danger" %>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-muted mb-0">Nenhuma classificação secundária cadastrada ainda.</p>
        <% end %>
      </div>
    </div>
  <% end %>
<% else %>
  <div class="alert alert-info">
    Nenhuma classificação primária cadastrada ainda. Adicione uma acima.
  </div>
<% end %>

<script>
  function toggleSecondaryForm(primaryId) {
    const form = document.getElementById('secondary_form_' + primaryId);
    form.style.display = form.style.display === 'none' ? 'block' : 'none';
  }
</script>

