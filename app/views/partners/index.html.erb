<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h3 mb-0">Parceiros</h1>
  <div>
    <% if current_curatelado %>
      <span class="badge bg-info me-2">Curatelado: <%= current_curatelado.name %></span>
    <% end %>
    <%= link_to "Novo Parceiro", new_partner_path, class: "btn btn-primary" %>
  </div>
</div>

<% if @partners.any? %>
  <!-- Mobile View: Cards -->
  <div class="d-md-none">
    <% @partners.each do |partner| %>
      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title"><%= partner.name %></h5>
          <p class="card-text text-muted"><%= partner.cpf_cnpj %></p>
          <div class="btn-group w-100" role="group">
            <%= link_to "Ver", partner_path(partner), class: "btn btn-sm btn-outline-primary" %>
            <%= link_to "Editar", edit_partner_path(partner), class: "btn btn-sm btn-outline-secondary" %>
            <%= link_to "Excluir", partner_path(partner), data: { turbo_method: :delete, turbo_confirm: "Tem certeza?" }, class: "btn btn-sm btn-outline-danger" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Desktop View: Table -->
  <div class="d-none d-md-block">
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Nome</th>
            <th>CPF/CNPJ</th>
            <th>Ações</th>
          </tr>
        </thead>
        <tbody>
          <% @partners.each do |partner| %>
            <tr>
              <td><strong><%= partner.name %></strong></td>
              <td><%= partner.cpf_cnpj %></td>
              <td>
                <div class="btn-group" role="group">
                  <%= link_to "Ver", partner_path(partner), class: "btn btn-sm btn-outline-primary" %>
                  <%= link_to "Editar", edit_partner_path(partner), class: "btn btn-sm btn-outline-secondary" %>
                  <%= link_to "Excluir", partner_path(partner), data: { turbo_method: :delete, turbo_confirm: "Tem certeza?" }, class: "btn btn-sm btn-outline-danger" %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% else %>
  <div class="alert alert-info">
    Nenhum parceiro registrado ainda. <%= link_to "Criar primeiro parceiro", new_partner_path, class: "alert-link" %>.
  </div>
<% end %>
