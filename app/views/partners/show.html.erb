<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="h3 mb-0"><%= @partner.name %></h1>
  <div>
    <%= link_to "Editar", edit_partner_path(@partner), class: "btn btn-secondary" %>
    <%= button_to "Excluir", partner_path(@partner), method: :delete, data: { turbo_confirm: "Tem certeza que deseja excluir este parceiro?" }, class: "btn btn-danger" %>
  </div>
</div>

<div class="card">
  <div class="card-body">
    <div class="row">
      <div class="col-md-6 mb-3">
        <h6 class="text-muted mb-1">Nome</h6>
        <p class="mb-0"><%= @partner.name %></p>
      </div>
      <div class="col-md-6 mb-3">
        <h6 class="text-muted mb-1">CPF/CNPJ</h6>
        <p class="mb-0"><%= @partner.cpf_cnpj %></p>
      </div>
    </div>
  </div>
</div>

<div class="mt-3">
  <%= link_to "Voltar", partners_path, class: "btn btn-secondary" %>
</div>
