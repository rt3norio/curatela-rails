<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h3 mb-0">Reembolsos</h1>
  <div>
    <% if current_curatelado %>
      <span class="badge bg-info me-2">Curatelado: <%= current_curatelado.name %></span>
    <% end %>
    <%= link_to "Novo Reembolso", new_reimbursement_path, class: "btn btn-primary" %>
  </div>
</div>

<% if @curator_totals.present? %>
  <div class="card mb-4">
    <div class="card-header bg-primary text-white">
      <h5 class="mb-0">ðŸ“Š RelatÃ³rio de Reembolsos por Curador</h5>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>Curador</th>
              <th>Total de Pagamentos</th>
              <th>Valor Total</th>
              <th>Reembolsado</th>
              <th>Pendente de Reembolso</th>
              <th>Qtd. Pendente</th>
            </tr>
          </thead>
          <tbody>
            <% @curator_totals.each do |curator, totals| %>
              <tr>
                <td><strong><%= curator.email %></strong></td>
                <td><%= totals[:payment_count] %></td>
                <td><strong><%= format_currency(totals[:total]) %></strong></td>
                <td class="text-success"><%= format_currency(totals[:reimbursed]) %></td>
                <td class="text-warning"><strong><%= format_currency(totals[:pending]) %></strong></td>
                <td>
                  <% if totals[:pending_count] > 0 %>
                    <span class="badge bg-warning"><%= totals[:pending_count] %> pagamento(s)</span>
                  <% else %>
                    <span class="badge bg-success">Nenhum</span>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% end %>

<% if @reimbursements.any? %>
  <!-- Mobile View: Cards -->
  <div class="d-md-none">
    <% @reimbursements.each do |reimbursement| %>
      <div class="card mb-3">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-start mb-2">
            <div>
              <h5 class="card-title mb-1"><%= reimbursement.code %></h5>
              <small class="text-muted"><%= reimbursement.created_at.strftime("%d/%m/%Y %H:%M") %></small>
            </div>
            <span class="badge bg-primary"><%= reimbursement.payments.count %> pagamento(s)</span>
          </div>
          <% if reimbursement.curator.present? %>
            <p class="mb-2">
              <small class="text-muted">Curador:</small>
              <span class="badge bg-info"><%= reimbursement.curator.email %></span>
            </p>
          <% end %>
          <p class="h5 text-success mb-3"><%= format_currency(reimbursement.payments.sum(:value)) %></p>
          <div class="btn-group w-100" role="group">
            <%= link_to "Ver", reimbursement_path(reimbursement), class: "btn btn-sm btn-outline-primary" %>
            <%= link_to "Editar", edit_reimbursement_path(reimbursement), class: "btn btn-sm btn-outline-secondary" %>
            <% if reimbursement.reimbursement_proof.attached? %>
              <%= link_to "ðŸ“„", rails_blob_path(reimbursement.reimbursement_proof, disposition: "inline"), target: "_blank", class: "btn btn-sm btn-outline-info", title: "Ver comprovante" %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Desktop View: Table -->
  <div class="d-none d-md-block">
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>CÃ³digo</th>
            <th>Curador</th>
            <th>Pagamentos</th>
            <th>Valor Total</th>
            <th>Data de CriaÃ§Ã£o</th>
            <th>Comprovante</th>
            <th>AÃ§Ãµes</th>
          </tr>
        </thead>
        <tbody>
          <% @reimbursements.each do |reimbursement| %>
            <tr>
              <td><strong><%= reimbursement.code %></strong></td>
              <td>
                <% if reimbursement.curator.present? %>
                  <span class="badge bg-info"><%= reimbursement.curator.email.split('@').first %></span>
                <% else %>
                  <span class="text-muted">-</span>
                <% end %>
              </td>
              <td>
                <span class="badge bg-primary"><%= reimbursement.payments.count %> pagamento(s)</span>
              </td>
              <td><strong><%= format_currency(reimbursement.payments.sum(:value)) %></strong></td>
              <td><%= reimbursement.created_at.strftime("%d/%m/%Y %H:%M") %></td>
              <td>
                <% if reimbursement.reimbursement_proof.attached? %>
                  <%= link_to "Ver", rails_blob_path(reimbursement.reimbursement_proof, disposition: "inline"), target: "_blank", class: "btn btn-sm btn-outline-primary" %>
                <% else %>
                  <span class="text-muted">-</span>
                <% end %>
              </td>
              <td>
                <div class="btn-group" role="group">
                  <%= link_to "Ver", reimbursement_path(reimbursement), class: "btn btn-sm btn-outline-primary" %>
                  <%= link_to "Editar", edit_reimbursement_path(reimbursement), class: "btn btn-sm btn-outline-secondary" %>
                  <%= link_to "Excluir", reimbursement_path(reimbursement), data: { turbo_method: :delete, turbo_confirm: "Tem certeza?" }, class: "btn btn-sm btn-outline-danger" %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% else %>
  <div class="alert alert-info">
    Nenhum reembolso registrado ainda. <%= link_to "Criar primeiro reembolso", new_reimbursement_path, class: "alert-link" %>.
  </div>
<% end %>

