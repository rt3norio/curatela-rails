<div class="mb-3">
  <%= link_to "← Voltar", reimbursements_path, class: "btn btn-secondary btn-sm" %>
</div>

<div class="card">
  <div class="card-header">
    <h2 class="h4 mb-0">Reembolso: <%= @reimbursement.code %></h2>
  </div>
  <div class="card-body">
    <div class="row g-3 mb-3">
      <div class="col-12 col-md-6">
        <strong class="d-block mb-1">Código:</strong>
        <span><%= @reimbursement.code %></span>
      </div>
      <div class="col-12 col-md-6">
        <strong class="d-block mb-1">Data de Criação:</strong>
        <span><%= @reimbursement.created_at.strftime("%d/%m/%Y %H:%M") %></span>
      </div>
    </div>

    <div class="mb-3">
      <strong class="d-block mb-1">Valor Total:</strong> 
      <span class="h4 text-success">
        <%= format_currency(@reimbursement.payments.sum(:value)) %>
      </span>
    </div>

    <div class="mb-3">
      <strong class="d-block mb-2">Comprovante:</strong>
      <% if @reimbursement.reimbursement_proof.attached? %>
        <div class="mb-2">
          <%= image_tag @reimbursement.reimbursement_proof, class: "img-fluid rounded border", style: "max-width: 100%;" %>
        </div>
        <div>
          <%= link_to "Abrir em nova aba", rails_blob_path(@reimbursement.reimbursement_proof, disposition: "inline"), target: "_blank", class: "btn btn-outline-primary btn-sm" %>
        </div>
      <% else %>
        <p class="text-muted mb-0">Sem comprovante anexado</p>
      <% end %>
    </div>

    <div class="mb-3">
      <strong class="d-block mb-2">Pagamentos Associados (<%= @reimbursement.payments.count %>):</strong>
      <% if @reimbursement.payments.any? %>
        <!-- Mobile View: Cards -->
        <div class="d-md-none">
          <% @reimbursement.payments.each do |payment| %>
            <div class="card mb-2">
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-2">
                  <div>
                    <h6 class="mb-1"><%= format_currency(payment.value) %></h6>
                    <small class="text-muted"><%= payment.date.strftime("%d/%m/%Y") %></small>
                  </div>
                  <%= link_to "Ver", payment_path(payment), class: "btn btn-sm btn-outline-primary" %>
                </div>
                <small class="d-block mb-1">
                  <strong><%= payment.primary_classification.name %></strong> / 
                  <%= payment.secondary_classification.name %>
                </small>
                <% if payment.description.present? %>
                  <small class="text-muted d-block mb-1"><%= truncate(payment.description, length: 50) %></small>
                <% end %>
                <small class="text-muted d-block"><%= payment.cpf_cnpj || "-" %></small>
              </div>
            </div>
          <% end %>
        </div>

        <!-- Desktop View: Table -->
        <div class="d-none d-md-block">
          <div class="table-responsive">
            <table class="table table-sm table-hover">
              <thead>
                <tr>
                  <th>Data</th>
                  <th>Classificação</th>
                  <th>Descrição</th>
                  <th>CPF/CNPJ</th>
                  <th>Valor</th>
                  <th>Ações</th>
                </tr>
              </thead>
              <tbody>
                <% @reimbursement.payments.each do |payment| %>
                  <tr>
                    <td><%= payment.date.strftime("%d/%m/%Y") %></td>
                    <td>
                      <small><%= payment.primary_classification.name %></small><br>
                      <small class="text-muted"><%= payment.secondary_classification.name %></small>
                    </td>
                    <td><%= truncate(payment.description, length: 30) %></td>
                    <td><%= payment.cpf_cnpj %></td>
                    <td><strong><%= format_currency(payment.value) %></strong></td>
                    <td>
                      <%= link_to "Ver", payment_path(payment), class: "btn btn-sm btn-outline-primary" %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      <% else %>
        <p class="text-muted mb-0">Nenhum pagamento associado</p>
      <% end %>
    </div>

    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4 pt-3 border-top">
      <%= link_to "Editar", edit_reimbursement_path(@reimbursement), class: "btn btn-primary" %>
      <%= link_to "Excluir", reimbursement_path(@reimbursement), data: { turbo_method: :delete, turbo_confirm: "Tem certeza?" }, class: "btn btn-danger" %>
    </div>
  </div>
</div>

