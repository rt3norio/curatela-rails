<% if resource.errors.any? %>
  <div style="background-color: #f8d7da; color: #721c24 !important; padding: 1rem; border-radius: 0.25rem; margin-bottom: 1.5rem; border: 1px solid #f5c6cb;">
    <h3 style="margin-top: 0; color: #721c24 !important; font-weight: 600;">
      <%= pluralize(resource.errors.count, "erro") %> impediram esta conta de ser criada:
    </h3>
    <ul style="margin-bottom: 0; color: #721c24 !important;">
      <% resource.errors.full_messages.each do |message| %>
        <li style="color: #721c24 !important;"><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


