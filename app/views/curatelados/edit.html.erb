<h1 class="h3 mb-4">Editar Curatelado</h1>

<%= form_with model: @curatelado, local: true do |f| %>
  <% if @curatelado.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(@curatelado.errors.count, "erro") %> impediram que este curatelado fosse salvo:</h4>
      <ul>
        <% @curatelado.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :name, "Nome", class: "form-label" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :description, "Descrição", class: "form-label" %>
    <%= f.text_area :description, class: "form-control", rows: 4 %>
  </div>

  <div class="d-flex gap-2 mb-4">
    <%= f.submit "Atualizar Curatelado", class: "btn btn-primary" %>
    <%= link_to "Cancelar", curatelado_path(@curatelado), class: "btn btn-secondary" %>
  </div>
<% end %>

<hr>

<h4 class="mb-3">Gerenciar Co-Curadores</h4>

<div class="card mb-3">
  <div class="card-header">
    <h5 class="mb-0">Adicionar Co-Curador</h5>
  </div>
  <div class="card-body">
    <%= form_with url: add_curator_curatelado_path(@curatelado), method: :post, local: true do |f| %>
      <div class="input-group">
        <%= f.select :user_id, options_from_collection_for_select(@available_curators, :id, :email), { prompt: "Selecione um usuário" }, class: "form-select" %>
        <%= f.submit "Adicionar", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>

<div class="card">
  <div class="card-header">
    <h5 class="mb-0">Curadores Atuais</h5>
  </div>
  <div class="card-body">
    <% if @curatelado.curators.any? %>
      <div class="list-group">
        <% @curatelado.curators.each do |curator| %>
          <div class="list-group-item d-flex justify-content-between align-items-center">
            <div>
              <%= curator.email %>
              <% if curator == @curatelado.owner %>
                <span class="badge bg-primary ms-2">Proprietário</span>
              <% end %>
            </div>
            <% unless curator == @curatelado.owner %>
              <%= button_to "Remover", remove_curator_curatelado_path(@curatelado, user_id: curator.id), method: :delete, data: { turbo_confirm: "Remover este curador?" }, class: "btn btn-sm btn-danger" %>
            <% end %>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-muted">Nenhum curador associado.</p>
    <% end %>
  </div>
</div>
