<h1 class="h3 mb-4">Novo Curatelado</h1>

<%= form_with model: @curatelado, local: true do |f| %>
  <% if @curatelado.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(@curatelado.errors.count, "erro") %> impediram que este curatelado fosse salvo:</h4>
      <ul>
        <% @curatelado.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :name, "Nome", class: "form-label" %>
    <%= f.text_field :name, class: "form-control", placeholder: "Ex: Curatela João Silva" %>
  </div>

  <div class="mb-3">
    <%= f.label :description, "Descrição", class: "form-label" %>
    <%= f.text_area :description, class: "form-control", rows: 4, placeholder: "Descrição opcional do curatelado" %>
  </div>

  <div class="d-flex gap-2">
    <%= f.submit "Criar Curatelado", class: "btn btn-primary" %>
    <%= link_to "Cancelar", curatelados_path, class: "btn btn-secondary" %>
  </div>
<% end %>
