<h1>Lista de Usu√°rios</h1>

<div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); gap: 1.5rem; margin-top: 2rem;">
  <% @users.each do |user| %>
    <div style="border: 1px solid #dee2e6; border-radius: 0.5rem; padding: 1.5rem; background-color: #fff;">
      <div style="text-align: center; margin-bottom: 1rem;">
        <% if user.profile_picture.attached? %>
          <%= image_tag user.profile_picture, style: "width: 100px; height: 100px; border-radius: 50%; object-fit: cover; border: 3px solid #007bff;" %>
        <% else %>
          <div style="width: 100px; height: 100px; border-radius: 50%; background-color: #e9ecef; margin: 0 auto; display: flex; align-items: center; justify-content: center; font-size: 2rem; color: #6c757d;">
            <%= user.email.first.upcase %>
          </div>
        <% end %>
      </div>
      <h3 style="text-align: center; margin: 0.5rem 0;"><%= user.email %></h3>
      <div style="text-align: center; margin-top: 1rem;">
        <%= link_to "Ver Perfil", user_path(user), style: "text-decoration: none; color: #007bff; padding: 0.5rem 1rem; border: 1px solid #007bff; border-radius: 0.25rem; display: inline-block;" %>
      </div>
    </div>
  <% end %>
</div>


